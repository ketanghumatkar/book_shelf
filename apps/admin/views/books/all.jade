extends ../../../../views/layout

block content

  h5.muted(style="padding-left: 200px;")
    i.icon-plus
    | &nbsp; Add a new Book
  include _form.jade

  if books.length > 0
    hr
    table.table.table-striped.table-hover#listing
      thead
        tr
          th Book Title
          th Author
          th Language
          th Read, huh?
          th
            i.icon-wrench
      tbody
      each book in books
        tr(data-id=book.id)
          td= book.name
          td= book.author
          td= book.language
          td.status
            div(class=cssClassForState('unread', book.state))
              p unread
            div(class=cssClassForState('reading', book.state))
              p reading
            div(class=cssClassForState('read', book.state))
                p read
          td
            a.btn.btn-mini.btn-danger(href="/admin/books/#{book.id}/delete")
              i.icon-remove.icon-white